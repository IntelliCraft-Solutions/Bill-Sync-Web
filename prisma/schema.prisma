generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id              String           @id @default(cuid())
  businessName    String
  email           String           @unique
  password        String
  createdAt       DateTime         @default(now())
  bills           Bill[]
  billingAccounts BillingAccount[]
  products        Product[]
  storeDetails    StoreDetails?
}

model BillingAccount {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  role      String   @default("CASHIER")
  adminId   String
  createdAt DateTime @default(now())
  bills     Bill[]
  admin     Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)
}

model Product {
  id                String     @id @default(cuid())
  name              String
  sku               String?
  category          String?
  price             Float
  quantityInStock   Int
  lowStockThreshold Int        @default(5)
  adminId           String
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  imageUrl          String?
  billItems         BillItem[]
  admin             Admin      @relation(fields: [adminId], references: [id], onDelete: Cascade)
}

model Bill {
  id               String         @id @default(cuid())
  billNumber       Int            @default(autoincrement())
  customerName     String
  billType         String
  totalAmount      Float
  billingAccountId String
  adminId          String
  createdAt        DateTime       @default(now())
  admin            Admin          @relation(fields: [adminId], references: [id], onDelete: Cascade)
  billingAccount   BillingAccount @relation(fields: [billingAccountId], references: [id], onDelete: Cascade)
  items            BillItem[]
}

model BillItem {
  id         String   @id @default(cuid())
  billId     String
  productId  String?
  name       String
  quantity   Int
  unitPrice  Float
  totalPrice Float
  bill       Bill     @relation(fields: [billId], references: [id], onDelete: Cascade)
  product    Product? @relation(fields: [productId], references: [id])
}

model StoreDetails {
  id         String   @id @default(cuid())
  storeName  String
  address    String?
  phone      String?
  email      String?
  gstNumber  String?
  website    String?
  logo       String?
  footerText String?  @default("Thank you for shopping!")
  adminId    String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  admin      Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)
}
